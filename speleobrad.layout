layout speleobrad
  scale 1 200
  unit metric
  symbol-set UIS
  overlap 1.5 cm
  transparency on
  opacity 90
  # grid bottom
  # grid-size 10 10 10 m
  map-header 10 10 e
  map-image 90 10 e logo.pdf
  legend on
  statistics topo-length on
  statistics explo-length on
  language en
  scale-bar 25 m
  color-model rgb
  color map-bg 85
  doc-author Speleobrad <speleobrad@gmail.com>
endlayout